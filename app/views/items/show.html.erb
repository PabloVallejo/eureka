<div class="container container-sm item-detail">
    <p id="notice"><%= notice %></p>

    <div class="header-nav">
        <a href="/" style="color: #333;">← Todos los objetos</a>
    </div>
    <div class="row item-detail">
        <div class="col-md-6">
            <img class="img-circle" src="https://graph.facebook.com/<%= @item.created_by.uid %>/picture?type=small" alt="">
            <h4>Publicado por <strong><%= @item.created_by %></strong></h4>
        </div>
        <div class="col-md-6">
            <div class="status text-right">
                <span class="label <%= @item.status_class %>">
                    Objeto <%= @item.status %>
                </span>
            </div>
            <div class="date text-right">
                <%= @item.created_at.strftime("%b %e de %Y a las %I:%M %p") %>
            </div>
        </div>
    </div>

    <h1><%= @item %></h1>
    <p><%= simple_format(@item.description) %></p>
    <hr>

    <div class="row">
        <% if !@item.attachments.blank? %>
            <h5>Imágenes</h5>
          <% for attachment in @item.attachments %>
            <div class="col-xs-6 col-md-3">
                <a href="<%= attachment.file.url %>" target="_blank" class="thumbnail">
                    <img src="<%= attachment.file.url(:thumb) %>" alt="...">
                </a>
            </div>
          <% end %>
        <% else %>
            <div class="col-md-12">
                <h4>Sin imagénes</h4>
                <p class="text-muted">Este objeto no tiene imágenes</p>
            </div>
        <% end %>
    </div>

</div>
